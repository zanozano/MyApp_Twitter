
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <p style="color: green"><%= notice %></p>

      <div id="tweets" class="card-deck">
        <% @tweets.each do |tweet| %>
          <div class="card mb-4">
            <div class="card-body">
              <%= render tweet %>
              <p>
                <%= link_to "Show this tweet", tweet %>
              </p>
            </div>
          </div>
        <% end %>
      </div>

      <%= paginate @tweets %>
    </div>
  </div>
</div>
